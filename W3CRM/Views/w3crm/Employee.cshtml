
@{
    ViewData["Title"] = "Employee";
}
<table id="empoloyees-tblwrapper" class="table">
	<thead>
		<tr>
			<th>Employee ID</th>
			<th>Öğrenci Adı</th>
			<th>Öğrenci Soyadı</th>
			<th>Veli Adı</th>
			<th>İletişim</th>
			<th>Veli Mail</th>
		</tr>
	</thead>
	<tbody>
        @foreach (var item in Model)
        {
            <tr id="bakim-@item.BakimTalepId" class="@(item.BakimTalepTurId == 1 ? "text-danger fw-bold" : "")">
                <td class="text-center" style="vertical-align:middle;">
                    @item.BakimTalepId
                </td>
                <td class="text-center" style="vertical-align:middle;">
                    @item.BakimTalepTur?.Tanim
                </td>
                <td class="text-center" data-order="@item.BaslamaTarihi.Ticks" style="vertical-align:middle;">
                    @item.BaslamaTarihi.ToString("dd.MM.yyyy")
                </td>
                <td class="text-center" data-order="@item.BitisTarihi.Ticks" style="vertical-align:middle;">
                    @item.BitisTarihi.ToString("dd.MM.yyyy")
                </td>
                <td class="text-center" style="vertical-align:middle;">
                    @item.TalepBirim.Tanim
                </td>
                <td style="vertical-align:middle;">
                    @foreach (var calismaAlani in item.BakimTalepCalismaAlani)
                    {
                        <div>
                            <i class="fas fa-location-dot"></i>
                            @calismaAlani.HatBilesen.Tanim
                        </div>
                    }
                </td>
                <td class="text-center" style="vertical-align:middle;">
                    @item.Aciklama
                </td>

                <td class="text-center" style="vertical-align:middle;">
                    @if (item.KirmiziBolgeCalisma ?? false)
                    {
                        <span class=" rounded-pill text-danger" text-capitalized="">Evet</span>
                    }
                    else
                    {
                        <span>Hayır</span>
                    }
                </td>
                <td class="text-center" style="vertical-align:middle">
                    <div class="dropdown">
                        <button type="button" class="btn btn-sm dropdown-toggle hide-arrow text-primary" data-bs-toggle="dropdown">
                            <i class="fa-solid fa-ellipsis-vertical"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end text-primary" style="cursor:pointer;">
                            //VERİ GİR
                        </div>
                    </div>
                </td>
            </tr>
        }
	</tbody>
</table>


