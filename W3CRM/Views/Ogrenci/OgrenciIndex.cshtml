@{
    ViewData["Title"] = "OgrenciIndex";
}


<div class="container-fluid">
    <div class="row">
        <!-- Kart 1: Öğretmen Sayısı -->
        <div class="col-xl-3 col-sm-6">
            <div class="card box-hover">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-box icon-box-lg bg-success-light rounded-circle">
                            <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <!-- SVG İçeriği Burada -->
                            </svg>
                        </div>
                        <div class="total-projects ms-3">
                            <h3 class="text-success count">@ViewBag.OgretmenSayi</h3>
                            <span>Öğretmen Sayısı</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kart 2: Öğrenci Sayısı -->
        <div class="col-xl-3 col-sm-6">
            <div class="card box-hover">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-box icon-box-lg bg-primary-light rounded-circle">
                            <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <!-- SVG İçeriği Burada -->
                            </svg>
                        </div>
                        <div class="total-projects ms-3">
                            <h3 class="text-primary count">@ViewBag.OgrenciSayi</h3>
                            <span>Öğrenci Sayısı</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kart 3: İptal Edilenler -->
        <div class="col-xl-3 col-sm-6">
            <div class="card box-hover">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-box icon-box-lg bg-danger-light rounded-circle">
                            <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <!-- SVG İçeriği Burada -->
                            </svg>
                        </div>
                        <div class="total-projects ms-3">
                            <h3 class="text-danger count">03</h3>
                            <span>Total Cancelled</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tablo Alanı -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div id="calisma-sorgula"></div>
                <div class="card-datatable table-responsive" id="dataBody">
                    <!-- Yükleniyor mesajı burada gösterilecek -->
                    <p class="text-center"><i class="fa fa-spin fa-spinner"></i> Yükleniyor.. </p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $("#dataBody").html("<p class='text-center'><i class='fa fa-spin fa-spinner'></i> Yükleniyor.. </p>");
            $.get("/Ogrenci/ogrenciList", function (res) {
                $("#dataBody").html(res); 
            });
        });
    </script>
}


                                